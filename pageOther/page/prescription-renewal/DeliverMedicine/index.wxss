/* pageOther/page/prescription-renewal/DeliverMedicine/index.wxss */
page {
  background-color: #f0f0f0;
}

.my-medical {
  width: 100%;
  height: 505rpx;
  position: relative;
  left: 0;
  top: 0;
  background-color: #fff;
}

.my-medical-top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
}

.my-medical-top-left {
  position: absolute;
  left: 30rpx;
  top: 36rpx;
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: 700;
}

.my-medical-top-right {
  position: absolute;
  right: 35rpx;
  top: 43rpx;
  color: rgba(133, 133, 133, 1);
  font-size: 24rpx;
}

.medical-show {
  height: 220rpx;
  position: absolute;
  left: 30rpx;
  top: 100rpx;
  width: 96%;
}


.image-group {
  display: flex;
  white-space: nowrap;
  height: 300rpx;
  width: 100%;
}

.image-scroll {
  display: flex;
  margin-top: 10rpx;
}

/* 药品展示  start*/
.medical-contain {
  margin-right: 30rpx;
  width: 498rpx;
  height: 200rpx;
}

.medical-contain:first-child {
  margin-left: 10rpx;
}

.medical-contain:last-child view {
  margin-right: 30rpx
}

.medical-contain-item {
  box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 5px;
  border-radius: 20rpx;
  width: 498rpx;
  height: 200rpx;
  box-sizing: border-box;
}

.medical-content {
  width: 445rpx;
  height: 100%;
  margin: 0 auto;
}


.medical-name {
  width:250rpx;
  height:200rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 28rpx;
  padding: 28rpx 0 0 0;
}

.medical-diagnosis {
  font-size: 24rpx;
  color: rgba(133, 133, 133, 1);
  padding: 0 0 17rpx 0;
}

.hx {
  width: 100%;
  height: 1px;
  border-top: solid rgba(222, 222, 222, 1) 1px;
}

.medical-doctor-show {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.doctor-show-text {
  font-size: 24rpx;
  width: 66%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: space-around;
  color:#858585;
}

.prescription-buy {
  width: 34%;
  text-align: center;
  height: 51.5rpx;
  line-height: 51.5rpx;
  background-color: var(--main-theme-color);
  font-size: 27.78rpx;
  color: #fff;
  border-radius: 20rpx;
}

/* 药品展示 end */
/* 找医生问诊开方 start */
.open-prescription {
  box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 5px;
  border-radius: 20rpx;
  position: absolute;
  top: 340rpx;
  left: 31rpx;
  width: 91%;
  height: 130rpx;
  margin: 0 auto;
}

.open-prescription-image {
  position: absolute;
  top: 30rpx;
  left: 31rpx;
}

.open-prescription-image image {
  width: 70rpx;
  height: 70rpx;
}

.open-prescription-top {
  position: absolute;
  top: 34rpx;
  left: 121rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 28rpx;
  font-weight: 600;
}

.open-prescription-bottom {
  position: absolute;
  top: 73rpx;
  left: 122rpx;
  color: rgba(133, 133, 133, 1);
  font-size: 24rpx;
}

.open-prescription-go {
  position: absolute;
  top: 45rpx;
  right: 35rpx;
  color: rgba(133, 133, 133, 1);
  font-size: 24rpx;
}

.open-prescription-go image {
  width: 30rpx;
  height: 48rpx;
  color: black;
}

/* 找医生问诊开方 end */
/* 药房 start */
.pharmacy {
  width: 91.5%;
  margin: 0 auto;
  border-radius: 25rpx;
}

.pharmacy-contain {
  border-bottom: 1px solid #f0f0f0;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  
  align-items: center;
}
.pharmacy-image{
  flex:1; 
}
.pharmacy-image image{
  width:155rpx;height:110rpx;margin-left:29rpx;
}
.pharmacy-text{
  flex:1.5;margin-left:10rpx;font-size:24rpx;color:rgba(133, 133, 133, 1);
}
.pharmacy-name{
  font-size:28rpx;color:#333333;
}
.pharmacy-score{
  margin:21rpx 0 14rpx 0;
}
.pharmacy-distinct{
  flex:1;color:#333333;
  font-size: 24rpx;
}
/* 药房 end */

.special {
  font-size: 28rpx;
  margin-top: 21.3333rpx;
  line-height: 35rpx;
  color: #858585;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  display: -webkit-box !important;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin: 0;
  padding: 0;
  box-sizing: border-box !important;
  -webkit-box-sizing: border-box !important;
  word-wrap: break-word !important;
  outline: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}