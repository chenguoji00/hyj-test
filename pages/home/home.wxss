/* 页面布局 */
.home-page{
  width:100%;
  height:100%;
  position:absolute;
  
  font-size: 27rpx;
  color: var(--textColor);
}
/* 搜索 */
.search{}

/* 内容展示区 start */
.home-content{
  height:calc(100% - 108rpx);
  width:100%;
  overflow-y: scroll;
  padding: 0px;
  margin: 0px;
  flex-grow: 1;
}
/* 轮播图 */
.swiper{ 
  width:94%;margin:0 auto;
  height: 216rpx;
}
/* 主要功能导航 start*/
.main-navs{
  padding: 20rpx;
  display: flex;
  background-color: #ffffff;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.navs-item{
  width: 25%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.navs-item text{
  line-height: 60rpx;
}
.navs-item image{
  width:100rpx;height:100rpx;
}
/* 主要功能导航 end */

/* 找医生 start */
.rec-doctor-title{
  background-color: #fff;
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}
.rec-doctor-title .lt{
  color: #2e2d2d;
  font-weight: bolder;
  margin-left: 20rpx;
  font-size: 38rpx;
}
.rec-doctor-title .rt{
  line-height: 90rpx;
  height: 90rpx;
  text-align: center;
  color: #3d99fe;
  margin-right: 20rpx;
  font-weight: bolder;
  display: flex;
  justify-content: center;
  align-items: center;
}

